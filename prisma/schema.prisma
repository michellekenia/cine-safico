generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ScrapedMovie {
  id          String     @id @default(cuid())
  slug        String     @unique
  title       String
  releaseDate String?
  director    String?
  synopsisEn  String?    @db.Text
  synopsisPt  String?    @db.Text
  posterImage String?    @db.Text
  duration    String?
  rating      String?
  genres      Genre[]
  country     Country[]
  language    Language[]
  scrapedAt   DateTime   @default(now())

  streamingServices StreamingService[]
  
  streamingPlatforms StreamingPlatform[]
}

model Genre {
  id         String         @id @default(cuid())
  nome       String         @unique
  nomePt     String?
  slug       String         @unique
  isFeatured Boolean        @default(false)
  movies     ScrapedMovie[]
}

model Country {
  id     String         @id @default(cuid())
  nome   String         @unique
  nomePt String?
  slug   String         @unique
  movies ScrapedMovie[]
}

model Language {
  id     String         @id @default(cuid())
  nome   String         @unique
  nomePt String?
  slug   String         @unique
  movies ScrapedMovie[]
}

model StreamingService {
  id             String       @id @default(cuid())
  service        String
  link           String       @db.Text
  scrapedMovie   ScrapedMovie @relation(fields: [scrapedMovieId], references: [id], onDelete: Cascade)
  scrapedMovieId String
}

model StreamingPlatform {
  id          String   @id @default(cuid())
  nome        String   @unique
  slug        String   @unique
  categoria   String   // "principal", "brasileira", "nicho", "gratuita", "digital", "internacional"
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  movies      ScrapedMovie[]

  @@map("StreamingPlatform")
}
