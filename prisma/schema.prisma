generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ScrapedMovie {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  releaseDate String?
  director    String?
  synopsisEn  String?  @db.Text
  synopsisPt  String?  @db.Text
  posterImage String?  @db.Text
  duration    String?
  rating      String?
  genres      Genre[]  
  genresPt    String[] @default([])
  country     String[]
  countryPt   String[] @default([])
  language    String[]
  languagePt  String[] @default([])
  scrapedAt   DateTime @default(now())

  streamingServices StreamingService[]
}

model Genre {
  id     String         @id @default(cuid())
  nome   String         @unique
  nomePt String?        
  slug   String         @unique
  movies ScrapedMovie[]
}

model StreamingService {
  id             String       @id @default(cuid())
  service        String
  link           String       @db.Text
  scrapedMovie   ScrapedMovie @relation(fields: [scrapedMovieId], references: [id], onDelete: Cascade)
  scrapedMovieId String
}
