generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id                Int       @id @default(autoincrement())
  title             String
  releaseDate       DateTime? @map("release_date")
  director          String
  synopsis          String?   @map("synopsis") @db.Text
  streamingPlatform String?   @map("streaming_platform") @db.VarChar(255)
  posterImage       String?   @map("poster_image")
}

model ScrapedMovie {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  releaseDate String?
  director    String?
  synopsis    String?  @db.Text
  posterImage String?  @db.Text
  scrapedAt   DateTime @default(now())

  streamingServices StreamingService[]
}

model StreamingService {
  id             String       @id @default(cuid())
  service        String
  link           String       @db.Text
  scrapedMovie   ScrapedMovie @relation(fields: [scrapedMovieId], references: [id], onDelete: Cascade)
  scrapedMovieId String
}
